<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/standard.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900" rel="stylesheet">
    <title>ADMIN PAGE</title>
</head>

<body id="bootstrap-overrides">
    <div class="container">
        <header class="nav-scroller py-2">

            <div class="d-flex justify-content-center">
                <div class="col-md-6 text-right">
                    <h1 class="blog-header-logo text-dark" href="/">REDIGERINGS PANEL</h1>
                </div>
                <a class="p-1 text-muted col-md-2 float-right" href="/admin">Tilbage</a>
            </div>

            <div class="col-md-12">
                <nav class="nav justify-content-center">
                    <a class="p-1 text-muted col-md-2" href="/">Arrangement</a>
                    <a class="p-1 text-muted col-md-2" href="#">Reservation</a>
                    <a class="p-1 text-muted col-md-2" href="#">Café</a>
                    <a class="p-1 text-muted col-md-2" href="#">Om os</a>

                    <div class="col-md-4 d-flex justify-content-end">
                        <input class="form-control col-md-6" placeholder="">
                        <a class="btn btn-md btn-outline-secondary ml-2" href="#">Søg</a>
                    </div>
                </nav>

            </div>
            <!-- /.col-md-12 -->
        </header>

        <% redigere.forEach(elm => { %>
            <form method="POST" action="/redigere/<%= elm.arrangement_id %>">
                <div class="form-group row">
                    <label for="example-text-input">Title:</label>
                    <input type="navn" name="navn" id="example-text-input" class="form-control" value="<%= elm.navn %>">
                </div>

                <div class="form-group row">
                    <label for="example-text-input">Dato:</label>
                    <input type="varighed" name="varighed" id="example-text-input" class="form-control" value="<%= elm.dato %>">
                </div>

                <div class="form-group row">
                    <label for="example-text-input">Pris:</label>
                    <input type="pris" name="pris" id="example-text-input" class="form-control" value="<%= elm.pris %>">
                </div>

                <div class="form-group row">
                    <label for="exampleTextarea">Beskrivelse:</label>
                    <textarea type="beskrivelse" name="beskrivelse" class="form-control" id="exampleTextarea" rows="3"><%= elm.besk %></textarea>
                </div>

                <div class="form-group row">
                    <label for="exampleSelect1">Kategori:</label>
                    <select id="kategori" name="kategori" type="kategori" onchange="hentData2();">
                        <% kategori.forEach(function(cat){ %>

                            <option value="<%= cat.kategori_id %>">
                                <%= cat.navn %>
                            </option>
                            <% })  %>
                    </select>
                </div>

                <button type="submit" class="btn btn-danger d-flex justify-content-center col-md-4 m-2" onclick="opret(this);">GEM</button>

            </form>
            <% }) %>




                <footer class="blog-footer clearfix">
                    <a href="#">Top</a>
                </footer>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js"></script>
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
                <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
                <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
                    crossorigin="anonymous">
                    </script>
                <script src="static/js/crud.js"></script>
    </div>
</body>

</html>